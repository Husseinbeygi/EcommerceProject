@page
@model Areas.Administration.Pages.Discount.CustomerDiscount.IndexModel
@{
}

@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "ثبت تخفیفات";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ثبت تخفیف جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو محصولات</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label asp-for="SearchModel.ProductId" class="control-label">نام محصول</label>
                        <select asp-for="SearchModel.ProductId" asp-items="Model._SearchwithProductList" class="form-control">
                            <option value="0">نام محصول...</option>
                        </select>
                        <span asp-validation-for="SearchModel.ProductId" class="error"></span>
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.StartDate"></label>
                        <input class="form-control PersianDateInput" asp-for="SearchModel.StartDate" placeholder="تاریخ شروع">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.EndDate"></label>
                        <input class="form-control PersianDateInput" asp-for="SearchModel.EndDate" placeholder="تاریخ پایان">
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> لیست تخفیفات(@Model.customerDiscountViewModel.Count)</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>محصول</th>
                                    <th>درصد تخفیف</th>
                                    <th>تاریخ شروع</th>
                                    <th>تاریخ پایان</th>
                                    <th>مناسبت</th>
                                    <th>عملیات</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.customerDiscountViewModel)
                                {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>
                                        @item.ProductName 
                                    </td>
                                    <td>@item.DiscountRate</td>
                                    <td>@item.StartDate</td>
                                    <td>@item.EndDate</td>
                                    <td>@item.Reason</td>
                                    <td>
                                        <a class="btn btn-warning pull-right m-rl-5"
                                           href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id})">
                                            <i class="fa fa-edit"></i> ویرایش
                                        </a>
</td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminPageAssests/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminPageAssests/assets/datatables/dataTables.bootstrap.js"></script>


    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}

