@model InventorManagment.Contract.Application.Inventory.DecreaseInventory


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">کاهش موجودی</h4>
</div>

<form asp-page="./Index" asp-page-handler="Decrease"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">

                    <label asp-for="Count" class="control-label">تعداد</label>
                    <input type="text" name="Count" asp-for="Count" class="form-control" />
                    <span asp-validation-for="Count" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Description" class="control-label">توضیحات</label>
                    <input type="text" class="form-control" asp-for="Description">
                    <span asp-validation-for="Description" class="error"></span>
                </div>
            </div>
        </div>
    </div>

    <input type="hidden" name="InvenoryId" asp-for="InvenoryId" value="@Model.InvenoryId" />
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">کاهش</button>
    </div>
</form>